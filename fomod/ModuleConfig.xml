<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://qconsulting.ca/fo3/ModConfig5.0.xsd">
	<moduleName>Colorful Icons Support</moduleName>
	<installSteps order="Explicit">
		<installStep name="Colorful Icons Support">
			<optionalFileGroups order="Explicit">
				<group name="Interface" type="SelectAny">
					<plugins order="Explicit">
						<plugin name="ySI - Sorting Icons">
							<description>Select if you want to remove the interface tint from ySI - Sorting Icons.&#13;&#10;
NOTE: Colorful icons downloaded separately.</description>
							<files>
								<folder source="Main\ySI" destination="" priority="0" />
							</files>
							<typeDescriptor>
								<type name="Recommended"/>
							</typeDescriptor>
						</plugin>
						<plugin name="Map Markers">
							<description>Select if you want to remove the interface tint from world map location and local map door markers.&#13;&#10;
NOTE: Colorful icons downloaded separately.</description>
							<files>
								<folder source="Main\Map Markers" destination="" priority="0" />
							</files>
							<typeDescriptor>
								<type name="Optional"/>
							</typeDescriptor>
						</plugin>
					</plugins>
				</group>
				<group name="ySI - Categories" type="SelectAny">
					<plugins order="Explicit">
						<plugin name="Weapons">
							<description>Adds ySI - Categories to the Pip-Boy "Weapons" section.</description>
							<files>
								<file source="Optional\ySI - Categories\ySI - Weapon Categories.json" destination="menus\ySI\ySI - Weapon Categories.json" priority="0" />
							</files>
							<typeDescriptor>
								<type name="Optional"/>
							</typeDescriptor>
						</plugin>
						<plugin name="Apparel">
							<description>Adds ySI - Categories to the Pip-Boy "Apparel" section.</description>
							<files>
								<file source="Optional\ySI - Categories\ySI - Apparel Categories.json" destination="menus\ySI\ySI - Apparel Categories.json" priority="0" />
							</files>
							<typeDescriptor>
								<type name="Optional"/>
							</typeDescriptor>
						</plugin>
						<plugin name="Aid">
							<description>Adds ySI - Categories to the Pip-Boy "Aid" section.</description>
							<files>
								<file source="Optional\ySI - Categories\ySI - Aid Categories.json" destination="menus\ySI\ySI - Aid Categories.json" priority="0" />
							</files>
							<typeDescriptor>
								<type name="Optional"/>
							</typeDescriptor>
						</plugin>
						<plugin name="Misc">
							<description>Adds ySI - Categories to the Pip-Boy "Misc" section.</description>
							<files>
								<file source="Optional\ySI - Categories\ySI - Misc Categories.json" destination="menus\ySI\ySI - Misc Categories.json" priority="0" />
							</files>
							<typeDescriptor>
								<type name="Optional"/>
							</typeDescriptor>
						</plugin>
						<plugin name="Ammo">
							<description>Adds ySI - Categories to the Pip-Boy "Ammo" section.</description>
							<files>
								<file source="Optional\ySI - Categories\ySI - Ammo Categories.json" destination="menus\ySI\ySI - Ammo Categories.json" priority="0" />
							</files>
							<typeDescriptor>
								<type name="Optional"/>
							</typeDescriptor>
						</plugin>
					</plugins>
				</group>
				<group name="Optional" type="SelectAny">
					<plugins order="Explicit">
						<plugin name="ySI - JSON Patcher">
							<description>Scriptrunner which patches all ySI JSON files to remove icon interface tint.&#13;&#10;
NOTE: Cannot be reverted without reinstalling the patched JSONs source mod.</description>
							<files>
								<folder source="Optional\ySI - JSON Patcher" destination="" priority="0" />
							</files>
							<typeDescriptor>
								<type name="Optional"/>
							</typeDescriptor>
						</plugin>
					</plugins>
				</group>
			</optionalFileGroups>
		</installStep>
	</installSteps>
</config>